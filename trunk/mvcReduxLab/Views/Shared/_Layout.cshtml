<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@TempData["Title"]</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Content("~/Home")">
            <img src="@Url.Content("~/images/logo.png")" height="30" class="d-inline-block align-top" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-toggler+.collapse.navbar-collapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
            @* menu *@
            @Html.Partial("~/Views/Shared/_Menu.cshtml")

            @* right side navbar *@
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("UserInfo")">
                        <i class="fa fa-user-o" aria-hidden="true"></i>&nbsp;林測試
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout")">
                        <i class="fa fa-sign-out" aria-hidden="true"></i>&nbsp;Logout
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    @RenderBody()

    @* footer *@
    @Html.Partial("~/Views/Shared/_Footer.cshtml")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
